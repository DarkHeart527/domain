<html>
	<head>
		<title>My First XML Request using AJAX</title>
	</head>
	<body>
	
	</body>
	<script>
		function testXML() {
		 var xhttp = new XMLHttpRequest();
		 xhttp.onreadystatechange = function() {
		  if (this.readyState == 4 && this.status == 200) {
		   document.getElementsByTagName('body')[0].innerHTML = this.responseText;
		  } else if (this.readyState == 4 && this.status == 404) {
		   document.getElementsByTagName('body')[0].innerHTML = "404 Page Not Found";
		  } else if (this.readyState == 4) {
		   document.getElementsByTagName('body')[0].innerHTML = "An unexpected error occured! Page is loaded but cannot be sent. Contact us for help.";
		  } else {
		   document.getElementsByTagName('body')[0].innerHTML = '404 Page NOT Found or some other error has occured';
		  }
		 };
		 xhttp.open("GET", "XMLRequest.txt", true);
		 xhttp.send();
		}
		testXML();
	</script>
</html>
